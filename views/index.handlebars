
<img src="assets/img/hamburger.png" id="hamburger-pic">

<h1>Eat Da Burger!</h1>

<div class="container">
	<div class="row" id="lists">
		<div class="col-md-6" id="toBeEaten">
			<ol>
				{{#each burgers}}
					{{#unless devoured}}
						{{burger_name}}
						<button class="eat-burger" data-id="{{id}}">
							DEVOUR IT!
						</button
					{{/unless}}
				{{/each}}
			</ol>
		</div>

		<div class="col-md-6" id="eaten">
			<ol>
				{{#each burgers}}
					{{#if devoured}}
						{{burger_name}}
					{{/if}}
				{{/each}}
			</ol>
		</div>
	</div>

	<h2>Add a Burger - Click Submit to Add</h2>
	<form class="create-form">

	  <div class="form-group">
	    <label for="burg">Burger Name:</label>
	    <input type="text" id="burg" name="name">
	  </div>

	  <button type="submit">Submit</button>

	</form> 


